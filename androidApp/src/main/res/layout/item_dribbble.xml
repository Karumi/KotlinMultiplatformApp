<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="8dp">

    <FrameLayout
        android:id="@+id/dribbbleImageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_dribbble_list_item"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/dribbbleImage"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            tools:ignore="ContentDescription" />
    </FrameLayout>

    <TextView
        android:id="@+id/dribbbleName"
        style="@style/Text.List.DribbbleName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/dribbbleImageContainer"
        tools:text="Saguaro National Park" />

    <TextView
        android:id="@+id/dribbbleAuthorName"
        style="@style/Text.List.AuthorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dribbbleName"
        tools:text="by Nick Slater" />

</android.support.constraint.ConstraintLayout>